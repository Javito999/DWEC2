//siguiente

function diaMesAnho(anho, mes){

    let fecha = new Date(anho, mes, 0);

    return fecha.getDate();

}diaMesAnho();

console.log(diaMesAnho(1987, 2));

//siguiente

function comparaFechas(fecha1, fecha2){

     let f1 = new Date(fecha1);
     let f2 = new Date(fecha2);

    if(fecha1 > fecha2){
        alert('La primera es mayor que la segunda')
    }else if(fecha1 === fecha2){
        alert('Las fechas son iguales')
    }else if(fecha1 < fecha2){
        alert('La segunda es mayor que la primera')
    }


}comparaFechas('2000-12-31', '1979-01-09');