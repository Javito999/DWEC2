function fechaNavidad(){

    let nocheVieja = new Date('2000-12-31');

    let otraFecha = nocheVieja.getDate();
  	console.log(otraFecha);

    let cambiaAnho = otraFecha.setDate(+1);
    console.log(cambiaAnho);
    //no funciona porqueel valor recuperado con getDate()
    //es un número, no un objeto tipo Date(). Para ello habría que:
    // let otraFecha = new Date(nocheVieja);
}fechaNavidad();

